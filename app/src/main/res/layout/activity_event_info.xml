<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft= "10dp"
        android:text="Event Name"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:editable="false"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:id="@+id/EventName"
        android:focusable="false"
        android:clickable="false"
        android:text="Temporary Event"></EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft= "10dp"
        android:text="Starting Date and Time"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        />

    <EditText
        android:layout_width="match_parent"
        android:maxLines="1"
        android:paddingLeft = "10dp"
        android:inputType="text"
        android:text="2022/11/25 09:00"
        android:focusable="false"
        android:clickable="false"
        android:id="@+id/DateAndTime"
        android:editable="false"
        android:layout_height="50dp">
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft= "10dp"
        android:text="Activity Type"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        />

    <EditText
        android:layout_width="match_parent"
        android:maxLines="1"
        android:paddingLeft = "10dp"
        android:inputType="text"
        android:text="2022/11/25 13:00"
        android:focusable="false"
        android:clickable="false"
        android:id="@+id/enddate"

        android:editable="false"
        android:layout_height="50dp">
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft= "10dp"
        android:text="Number of Attendees"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        />

    <EditText
        android:layout_width="match_parent"
        android:maxLines="1"
        android:paddingLeft = "10dp"
        android:inputType="text"
        android:editable="false"
        android:text="100"
        android:focusable="false"
        android:clickable="false"
        android:id="@+id/Attendees"
        android:layout_height="50dp">
    </EditText>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft= "10dp"
        android:text="Location"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        />

    <EditText
        android:layout_width="match_parent"
        android:maxLines="1"
        android:paddingLeft = "10dp"
        android:inputType="text"
        android:editable="false"
        android:text="800 Griffiths Way, Vancouver, BC"
        android:id="@+id/Location"
        android:focusable="false"
        android:clickable="false"
        android:layout_height="50dp">
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft= "10dp"
        android:text="Information"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        />

    <EditText
        android:layout_width="match_parent"
        android:maxLines="1"
        android:paddingLeft = "10dp"
        android:inputType="text"
        android:editable="false"
        android:id="@+id/EventInformationtext"
        android:focusable="false"
        android:clickable="false"
        android:layout_height="wrap_content">
    </EditText>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_height="match_parent"
            android:layout_width="100dp"
            android:text="Total Rating:"
            android:gravity="center"
            android:textSize="20sp"
            ></TextView>
        <RatingBar
            android:id="@+id/totalratingbar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:stepSize="1"
            android:numStars="4"
            android:isIndicator="true"
            android:theme="@style/Widget.AppCompat.RatingBar"
            ></RatingBar>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_height="match_parent"
            android:layout_width="100dp"
            android:text="My Rating:"
            android:gravity="center"
            android:textSize="20sp"
            ></TextView>
        <RatingBar
            android:id="@+id/myratingbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:stepSize="1"
            android:numStars="4"
            android:theme="@style/Widget.AppCompat.RatingBar"
            ></RatingBar>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:layout_height="match_parent"
            android:layout_width="150dp"
            android:text="View Comments"
            android:id="@+id/goviewcomments"
            ></Button>

        <Button
            android:layout_height="match_parent"
            android:layout_width="150dp"
            android:text="join event chat"
            android:id="@+id/eventChatButton"
            android:layout_marginLeft="10dp"></Button>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/SignUpEvent"
            android:text="Sign Up"
            android:layout_height="match_parent"
            android:layout_width="150dp"
            >
        </Button>
        <Button
            android:id="@+id/CommentEvent"
            android:text="Comment"
            android:layout_height="match_parent"
            android:layout_width="150dp"
            android:layout_marginLeft="10dp"
            >
        </Button>
    </LinearLayout>



    </LinearLayout>

</ScrollView>