<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_height="60dp"
            android:layout_width="60dp"

            android:id="@+id/cryingcatimg"
            >
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >

            <LinearLayout
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="User"
                    android:id="@+id/comment_user"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    >
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:text="2022/11/30 01:00"
                    android:id="@+id/comment_date_time"
                    android:gravity="center_vertical"
                    >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:id="@+id/titletextview"
                    ></TextView>

                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:id="@+id/goagaintextview"
                    android:layout_marginLeft="10dp"
                    ></TextView>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/ratingbarlayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/fixedratingbar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:numStars="4"
                    android:isIndicator="true"
                    android:stepSize="1"
                    android:theme="@style/Widget.AppCompat.RatingBar">

                </RatingBar>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comment_text"
                android:text="Hello world this is first comment"
                android:gravity="center_vertical"
                >
            </TextView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>